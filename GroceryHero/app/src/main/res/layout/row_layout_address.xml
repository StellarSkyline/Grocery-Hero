<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="#9EB2C0"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/icon_address"/>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:cardBackgroundColor="#38BB9B"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image_view_icon">
            <Button
                android:id="@+id/button_set_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Set Primary"
                android:textColor="#FFF"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:cardBackgroundColor="#38BB9B"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image_view_icon"
            android:layout_alignParentRight="true">
            <Button
                android:id="@+id/button_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Remove"
                android:textColor="#FFF"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_toRightOf="@+id/image_view_icon">


            <TextView
                android:id="@+id/text_view_house_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street"
                android:textColor="#2E3641"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_view_city_state_zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City/Country/Zip"
                android:textColor="#2E3641"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text_view_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textColor="#2E3641"
                android:textSize="20dp" />


        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
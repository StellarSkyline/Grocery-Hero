<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#2E3641">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_address"
            android:layout_gravity="center"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Address"
            android:textColor="#FFF"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_house_number"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColorHint="#FFF"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_house_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="House #"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_street_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColorHint="#FFF"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_street_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Street name"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"/>


            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_country_address"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:hintTextColor="#FFF"
                android:textColorHint="#FFF"
                android:weightSum="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_country_address"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="Country"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_zip_address"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:hintTextColor="#FFF"
                android:textColorHint="#FFF"
                android:weightSum="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_zip_address"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="ZIP Code"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_city_address"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:hintTextColor="#FFF"
                android:textColorHint="#FFF"
                android:weightSum="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_city_address"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:textColorHint="#FFF"
                    android:textColor="#FFF"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_type_address"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:hintTextColor="#FFF"
                android:textColorHint="#FFF"
                android:weightSum="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_type_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="#38BB9B"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/button_address_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textSize="20dp"
                android:background="@android:color/transparent"
                android:textColor="#FFF"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>